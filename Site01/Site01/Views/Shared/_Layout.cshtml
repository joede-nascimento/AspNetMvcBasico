@using Microsoft.AspNetCore.Http;
@{ 
    string Login = Context.Session.GetString("Login");
}
<html>
<head>
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
</head>
<body>
        <header>
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <a class="navbar-brand" href="/">Banco de Palavras</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item active">
                            <a class="nav-link" href="/">Inicio</a>
                        </li>
                        @if(Login != null)
                        {
                            <li class="nav-item active">
                                <a class="nav-link" href="/palavra">Palavras</a>
                            </li>
                            <li class="nav-item active">
                                <a class="nav-link" href="/home/logout">Logout</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item active">
                                <a class="nav-link" href="/home/login">Login</a>
                            </li>
                        }


                        <li class="nav-item">
                            <a class="nav-link" href="/contato">Contato</a>
                        </li>

                    </ul>
                </div>
            </nav>
        </header>

    <div class="container">
       
        <div>
            @RenderBody()
        </div>
        <footer>
            <div class="row">
                <div class="col-sm-12">
                    Todos os direitos reservados &copy; 2010 - @DateTime.Now.Year
                </div>
            </div>
        </footer>

    </div>
</body>
</html>



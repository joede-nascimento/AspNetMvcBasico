@{ 
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{ 
    ViewBag.Title = "Palavra - Contato";
}
<h1>Contato</h1>
<form method="post" action="/contato/recebercontato">
    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" name="nome" class="form-control" value="@ViewBag.Contato.Nome" id="nome" placeholder="digite o seu nome">
        @Html.ValidationMessage("nome")
    </div>

    <div class="form-group">
        <label for="email">Email</label>
        <input type="text" name="email" class="form-control" value="@ViewBag.Contato.Email" id="email" placeholder="digite o seu email">
        @Html.ValidationMessage("email")
    </div>

    <div class="form-group">
        <label for="assunto">Assunto</label>
        <input type="text" name="assunto" class="form-control" value="@ViewBag.Contato.Assunto" id="assunto" placeholder="digite o seu assunto">
        @Html.ValidationMessage("assunto")
    </div>

    <div class="form-group">
        <label for="assunto">Mensagem</label>
        <textarea type="text" name="mensagem" class="form-control" id="mensagem" placeholder="digite o seu mensagem">@ViewBag.Contato.Mensagem</textarea>
        @Html.ValidationMessage("mensagem")
    </div>

    <button type="submit" class="btn btn-primary">Enviar</button>
</form>
        
<div class="alert alert-success" role="alert">
    @ViewBag.Mensagem
</div>

        

